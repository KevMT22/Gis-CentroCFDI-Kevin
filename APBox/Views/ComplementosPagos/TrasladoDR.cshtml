@model  API.Operaciones.ComplementosPagos.TrasladoDR


@using (Html.BeginCollectionItem("Traslados"))
{
    @Html.ValidationSummary(true, "", new { @class = "label-blue-alt" })

    <div class="card shadow-sm">
        
        <div class="card-body row DTraslado">
            <div class="form-group col-xs-12 col-sm-2">
                @Html.LabelFor(model => model.Base, new { @class = "fw-bold" })<br />
                @*<p id="BaseTraslado">@Model.Base.ToString("0.000000")</p>*@
                @Html.EditorFor(model => model.Base, new { htmlAttributes = new { @class = "form-control mb-2 BaseTraslado" } })
                @Html.HiddenFor(model => model.Base)
            </div>
            <div class="form-group col-xs-12 col-sm-2">
                @Html.LabelFor(model => model.Impuesto, new { @class = "fw-bold" })<br />
                <p id="ImpuestoTraslado">@Model.Impuesto</p>
                @Html.HiddenFor(model => model.Impuesto)
            </div>
            <div class="form-group col-xs-12 col-sm-2">
                @Html.LabelFor(model => model.TipoFactor, new { @class = "fw-bold" })<br />
                <p id="TipoFactorTraslado">@Model.TipoFactor</p>
                @Html.HiddenFor(model => model.TipoFactor)
            </div>
            <div class="form-group col-xs-12 col-sm-2">
                @Html.LabelFor(model => model.TasaOCuota, new { @class = "fw-bold" })<br />
                <p id="TasaOCuotaTraslado">@Model.TasaOCuota</p>
                @Html.HiddenFor(model => model.TasaOCuota)
            </div>
            <div class="form-group col-xs-12 col-sm-2">
                @Html.LabelFor(model => model.Importe, new { @class = "fw-bold" })<br />
                @*<p id="ImporteTraslado">@Model.Importe.ToString("0.000000")</p>*@
                @Html.EditorFor(model => model.Importe, new { htmlAttributes = new { @class = "form-control mb-2 ImporteTraslado" } })
                @Html.HiddenFor(model => model.Importe)
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="clearfix"></div>
    <br />
}
