    function ImporteSobreIva(valor,iva) {
        var ImportPagado = parseFloat(valor);
        let ivaString = iva;
        ivaString = "1" + ivaString.toString().substring(1);
        var Iva = parseFloat(ivaString);
        var base = ImportPagado / Iva
        
        return base.toFixed(6);
    }

