<script>

    $(function () {
        $("#crearImpuesto").on('click', function () {
                          
            
            $.ajax({
                type: 'POST',
                url: ' @Url.Action("AgregarImpuesto", "Impuestos")',
                data: JSON.stringify({
                    TipoImp: $('#TipoImpuestoImp option:selected').val(),
                    Nombre: $('#NombreImp').val(),
                    Base: $('#BaseImp').val(),
                    Impuesto: $('#Impuesto').val(),
                    TipoFactor: $('#TipoFactor').val(),
                    TasaOCuota: $('#TasaOCuotaImp').val(),
                    //Importe: $('#ImporteImp').val()
                }),
                dataType: 'html',
                contentType: "application/json; charset=utf-8",
                success: function () {
                    window.location.href = "Index"
                },
                error: function (jqxhr, textStatus, error) {
                    alert("Favor de llenar todos los datos para los detalles ");
                }
            });
            
            return false;
        });
        $("#EditarImpuesto").on('click', function () {
            
            $.ajax({
                type: 'POST',
                url: ' @Url.Action("EditarImpuesto", "Impuestos")',
                data: JSON.stringify({
                    Id: $("#EditarImpuesto").data("id"),
                    TipoImp: $('#TipoImpuestoImp option:selected').val(),
                    Nombre: $('#NombreImp').val(),
                    Base: $('#BaseImp').val(),
                    Impuesto: $('#Impuesto').val(),
                    TipoFactor: $('#TipoFactor').val(),
                    TasaOCuota: $('#TasaOCuotaImp').val(),
                    Importe: $('#ImporteImp').val()
                }),
                dataType: 'html',
                contentType: "application/json; charset=utf-8",
                success: function () {
                    window.location.href = '../Index'
                },
                error: function (jqxhr, textStatus, error) {
                    alert("Favor de llenar todos los datos para los detalles ");
                }
            });
            
            return false;
        });
        $("#EliminarImpuesto").on('click', function () {
           
            $.ajax({
                type: 'POST',
                url: ' @Url.Action("EliminarImpuesto", "Impuestos")',
                data: JSON.stringify({
                    Id: $("#EliminarImpuesto").data("id")
                }),
                dataType: 'html',
                contentType: "application/json; charset=utf-8",
                success: function () {
                    window.location.href = '../Index'
                },
                error: function (jqxhr, textStatus, error) {
                    alert("Favor de llenar todos los datos para los detalles ");
                }
            });
            
            return false;
        });
    });
</script>