@model API.Operaciones.ComplementoCartaPorte.Cat_SubImpuestoC
@{
    ViewBag.Title = "Eliminar";
}
@Html.Partial("_ComplementoImpuestos")


<div class="card card-flush py-4">
    <div class="card-header">
        <div class="alert alert-danger">
            <div class="bg-red alert-icon">
                <i class="glyph-icon icon-remove"></i>
            </div>
            <div class="alert-content">
                <h4 class="alert-title">Alerta</h4>
                <p>¿Está seguro que desea eliminar este registro?</p>
            </div>
        </div>
        </div>
        <!--begin::Card body-->
        <div class="card-body pt-0">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.TipoImpuesto)
                @Html.HiddenFor(model => model.Base)
                @Html.HiddenFor(model => model.Impuesto)
                @Html.HiddenFor(model => model.TipoFactor)
                @Html.HiddenFor(model => model.TasaOCuota)
                @Html.HiddenFor(model => model.Importe)
                <div class="form deshabilitar row">
                    <div class="clearfix"></div>

                    <div class="form-group col-xs-12 col-sm-6 col-md-2">
                        @Html.LabelFor(model => model.TipoImpuesto, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.TipoImpuesto, new { htmlAttributes = new { @class = "form-control mb-2", @id = "ClaveProdServ_IdConceptos" } })
                        @Html.ValidationMessageFor(model => model.TipoImpuesto, "", new { @class = "text-danger" })
                        <div id="UnidadConceptosCon" style="color:red;"></div>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-md-2">
                        @Html.LabelFor(model => model.Base, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.Base, new { htmlAttributes = new { @class = "form-control mb-2" } })
                        @Html.ValidationMessageFor(model => model.Base, "", new { @class = "text-danger" })
                        <div id="ClaveUnidadConcepto" style="color:red;"></div>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-md-2" disabled="disabled">
                        @Html.LabelFor(model => model.Impuesto, htmlAttributes: new { @class = "form-label" })
                        @Html.EnumDropDownListSpecialFor(model => model.Impuesto)
                        @Html.ValidationMessageFor(model => model.Impuesto, "", new { @class = "text-danger" })
                        <div id="CantidadConcepto" style="color:red;"></div>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-md-2">
                        @Html.LabelFor(model => model.TipoFactor, htmlAttributes: new { @class = "form-label" })
                        @Html.EnumDropDownListSpecialFor(model => model.TipoFactor)
                        @Html.ValidationMessageFor(model => model.TipoFactor, "", new { @class = "text-danger" })
                        <div id="UnidadConceptosCon" style="color:red;"></div>
                    </div>
                    <div class="form-group col-xs-12 col-sm-6 col-md-2">
                        @Html.LabelFor(model => model.TasaOCuota, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.TasaOCuota, new { htmlAttributes = new { @class = "form-control mb-2", @id = "NoIdentificacion" } })
                        @Html.ValidationMessageFor(model => model.TasaOCuota, "", new { @class = "text-danger" })
                        <div id="NoIdentificacionConcepto" style="color:red;"></div>
                    </div>
                    @*<div class="row">*@
                    <div class="form-group col-xs-12 col-sm-6 col-md-2">
                        @Html.LabelFor(model => model.Importe, htmlAttributes: new { @class = "form-label" })
                        @Html.EditorFor(model => model.Importe, new { htmlAttributes = new { @class = "form-control mb-2" } })
                        @Html.ValidationMessageFor(model => model.Importe, "", new { @class = "text-danger" })
                    </div>

                    <div class="clearfix"></div>
                    <div class="separator my-5"></div>
                    <div class="d-flex justify-content-end">
                        <!--begin::Button-->
                        <a href="@Url.Action("Index", "Impuestos")" class="btn btn-light me-5">Cancelar</a>
                        <!--end::Button-->
                        <!--begin::Button-->
                        <button type="submit" id="EliminarImpuesto" data-id="@Model.Id" class="btn btn-primary">
                            <span>Eliminar</span>
                        </button>
                        <!--end::Button-->
                    </div>
                </div>
            }
        </div>
    </div>